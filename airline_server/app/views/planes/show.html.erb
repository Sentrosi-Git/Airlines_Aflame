<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @plane.name %>
</p>

<p>
  <strong>Rows:</strong>
  <%= @plane.rows %>
</p>

<p>
  <strong>Columns:</strong>
  <%= @plane.columns %>
</p>

<p><strong>Seat Map</strong></p>

<div class="seat-map">
  <% @plane.rows.times do %>
    <div>
      <% @plane.columns.times do %>
        <span>O</span>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_plane_path(@plane) %> |
<%= link_to 'Back', planes_path %>
